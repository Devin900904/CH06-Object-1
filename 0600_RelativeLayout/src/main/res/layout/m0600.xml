<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Teal"
    android:padding="@dimen/p10"
    tools:context=".M0600">

    <Button
        android:id="@+id/m0600_b001"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/Yellow"
        android:text="@string/m0600_t001"
        android:textSize="@dimen/fonsize1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m0600_b002"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0600_b001"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/m0600_b001"
        android:background="@color/Yellow"
        android:text="@string/m0600_t002"
        android:textSize="@dimen/fonsize1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m0600_b003"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0600_b002"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/m0600_b002"
        android:background="@color/Yellow"
        android:text="@string/m0600_t003"
        android:textSize="@dimen/fonsize1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m0600_b004"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0600_b003"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/m0600_b003"
        android:background="@color/Yellow"
        android:text="@string/m0600_t004"
        android:textSize="@dimen/fonsize1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0600_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="bottom|right|end"
        android:text="@string/myname"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

</RelativeLayout>